                    </loginServices>
                    -->
                        <webApp>
                        <descriptor>${project.basedir}/src/etc/test-web.xml</descriptor>
                        <contextPath>/</contextPath>
                        </webApp>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.2.2</version>
                <configuration>
